<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1><%= @flat.name %></h1>
    </div>
    <div class="card-body">
      <% if @flat.picture_url.present? %>
        <%= image_tag(@flat.picture_url, class: "card-img-top", alt: "Flat Image") %>
      <% end %>
      <p><strong>Address:</strong> <%= @flat.address %></p>
      <p><strong>Description:</strong> <%= @flat.description %></p>
      <p><strong>Price per Night:</strong> $<%= @flat.price_per_night %></p>
      <p><strong>Number of Guests:</strong> <%= @flat.number_of_guests %></p>

      <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-primary' %>
      <%= link_to 'Delete', flat_path(@flat), method: :delete, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-danger' %>
    </div>
  </div>

  <%= link_to 'Back to Index', flats_path, class: 'btn btn-secondary mt-3' %>
</div>
